@model BrandViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<div class="col-xs-2" style="top:100%;">&nbsp;</div>
    <div class="text-center col-xs-8" style="border:double;margin-top:15%;">*@
<div class="col-sm-2 col-xs-12">&nbsp;</div>
<div class="text-center col-sm-8 col-xs-12">
    <form asp-controller="Brand" asp-action="SelectBrand" method="post">
        <div class="col-lg-4 col-lg-12">&nbsp;</div>
        <div class="col-sm-4 col-xs-12" style="padding-bottom:5%;">
            <span style="font-size:large;top:20px;position:relative;padding:5px;">My Brands</span>
            <select asp-for="BrandId" asp-items="@Model.GetBrands()" style="top:35px;position:relative;padding:5px;"
                    class="form-group form-control " onchange="this.form.submit();">
                <option selected style="display:none;">
                    Select Brand
                </option>
            </select>



        </div>
        <div class="col-lg-4 col-lg-12">&nbsp;</div>
       <catalogue brand="@Model.BrandId"></catalogue>
    </form>


</div>

<div class="modal" id="details_popup">
    <div class="modal-dialog">
        <div class="modal-content col-xs-12">
            <div class="modal-body">
                <a href="" style="font-size:xx-large" data-dismiss="modal" class="pull-right">X</a>
                <div class="text-center">
                    <img alt="" id="detailsGraphic" style="height:120px;width:120px;" /><br />
                    <h4 id="description"></h4>
                </div>
                <form asp-controller="Brand" asp-action="SelectItem" method="post" role="form">
                    <div class="text-center col-sm-offset-2">
                        <table>
                            @*<tr><td class="col-xs-2 text-right">Description</td><td class="col-xs-8 text-left" id="Description"></td></tr>*@
                            <tr>
                                <td class="col-xs-6 text-right">CostPrice</td>
                                <td class="col-xs-4 text-left" id="CostPrice"></td>

                            </tr>
                            <tr>
                                <td class="text-right">MSRP: </td>
                                <td class="col-xs-5 text-left" id="msrp"></td>
                            </tr>
                            <tr>
                                <td class="text-right">Qty on hand:</td>
                            <td class="col-xs-5 text-left" id="qtyOnHand"></td>
                            </tr>
                            <tr>
                                <td class="text-right">Qty on back order:</td>
                                <td class="col-xs-5 text-left" id="qtyOnBackOrder"></td>
                            </tr>
                            <tr>


                                <td class="col-xs-6 text-right">Qty:</td>
                                <td class="col-xs-4 text-left">
                                    <input asp-for="QtyOnHand" type="number" maxlength="3" size="3" style="width: 50px;" id="qty" />
                                    <input asp-for="ProductId" type="hidden" id="detailsId" />
                                </td>
                            </tr>
                            <tr><td colspan="2">&nbsp;</td></tr>
                        </table>


                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-sm btn-default" id="modalbtn">Add To Tray</button>
                        <button id="btnRemove" type="submit" class="btn-sm btn btn-danger">Remove Item</button>
                        <a href="/Tray" class="btn btn-sm btn-success">View Tray</a>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <div id="results" class="text-center">
                    @ViewBag.AddMessage
                </div>
            </div>
        </div><!--modal-content-->
    </div><!--modal-dialog-->
</div><!--modal-->
